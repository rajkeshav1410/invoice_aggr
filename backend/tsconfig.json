{
    "compilerOptions": {
        "module": "commonjs",
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "target": "es6",
        "strict": true,
        "skipLibCheck": true,
        "noImplicitAny": true,
        "allowSyntheticDefaultImports": true,
        "moduleResolution": "node",
        "sourceMap": true,
        "outDir": "dist",
        "baseUrl": "./",
        "paths": {
            "src/*": ["./src/*"]
            // "*": [
            //     "node_modules/*"
            // ]
        }
    },
    "include": [
        "src/**/*"
    ]
}